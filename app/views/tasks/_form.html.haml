= form_for @task do |f|
  -if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :due_at
    = f.datetime_select :due_at
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :parent_id
    = f.number_field :parent_id
  .field
    = f.label :importance
    = f.number_field :importance
  .field
    = f.label :urgency
    = f.number_field :urgency
  .field
    = f.label :color
    = f.number_field :color
  .field
    = f.label :completed_at
    = f.datetime_select :completed_at
  .actions
    = f.submit 'Save'
