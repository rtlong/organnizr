        %input{:type => "text", :placeholder => "Quick Search", :name => "search" }
      %hr/

      #nav
        %h3 Calendar
        %ul.toggle
          %li.events_new= link_to "New Event", 'events/new'
          %li.events= link_to "View Calendar", 'events/'
          %li.events_agenda= link_to "Agenda", 'events/agenda'
          %li.event_settings= link_to "Settings", 'events/settings'

        %h3 Tasks
        %ul.toggle
          %li.tasks_new= link_to "New Task", 'tasks/new'
          %li.tasks= link_to "View Tasks", 'tasks/'
          %li.task_lists= link_to "View Task Lists", 'task_lists/'

