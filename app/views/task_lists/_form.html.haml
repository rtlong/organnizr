= form_for @task_list do |f|
  -if @task_list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task_list.errors.count, "error")} prohibited this task_list from being saved:"
      %ul
        - @task_list.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :due_at
    = f.datetime_select :due_at
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :parent_id
    = f.number_field :parent_id
  .field
    = f.label :default_priority
    = f.number_field :default_priority
  .field
    = f.label :color
    = f.number_field :color
  .actions
    = f.submit 'Save'
