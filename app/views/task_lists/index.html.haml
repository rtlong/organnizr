%h1 Listing task_lists

%table
  %tr
    %th Name
    %th Due at
    %th Description
    %th Parent
    %th Default priority
    %th Color
    %th
    %th
    %th

  - @task_lists.each do |task_list|
    %tr
      %td= task_list.name
      %td= task_list.due_at
      %td= task_list.description
      %td= task_list.parent_id
      %td= task_list.default_priority
      %td= task_list.color
      %td= link_to 'Show', task_list
      %td= link_to 'Edit', edit_task_list_path(task_list)
      %td= link_to 'Destroy', task_list, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Task list', new_task_list_path
